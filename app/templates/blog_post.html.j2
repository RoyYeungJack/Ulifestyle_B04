{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
{% if form %}
    {{ wtf.quick_form(form) }}
    <br/>
{% endif %}


<!------------------------show type-------------------------------->

<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
<ul class="nav navbar-nav">
    {% for i in blogtypes|sort(attribute='type') %}
        <li>
        <a href="{{ url_for('Blog_Type_Page', blog_type=i.type) }}">{{ i.type }}</a>
        </li>
    {% endfor %}
</ul></div>


<!------------------------show post---------------------------------->

<div>
    <h1>{{ postinf.title }}</h1>
    <p>{{ postinf.description }}</p>
    <a href="{{ url_for('Edit_Blog_Post', post_id = postinf.id) }}">Edit</a>
</div>


<div>
    <a href="{{ url_for('Add_Post_Comt', post_id = postinf.id) }}">Add Comt</a>
</div>


<!-------------------------show comt--------------------------------->

{% for a in comments %}
    <div class="comment">
        <p>{{ a.content }}</p>
    </div>
{% endfor %}




{% endblock %}