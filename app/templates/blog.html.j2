{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}


<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
<ul class="nav navbar-nav">
    {% for i in blogtypes %}
        <li>
        <a href="{{ url_for('Blog_Type_Page', blog_type = i.type) }}">{{ i.type }}</a>
        </li>
    {% endfor %}
</ul></div>


<div><ul>
    {% for x in random_posts %}
        <h1><a href="{{ url_for('Blog_Post_Page', post_id = x.id) }}">{{ x.title }}</a></h1>
        <p>{{ x.user.username }}</p>
        <p>{{ x.blogtype.type }}{{ x.blogtype_id }} </p>
    {% endfor %}

</ul></div>

</br></br></br></br></br>
       
<div><ul>
    {% for cmt in blogcomts %}
        <p>{{ cmt.content}}</p>
        <p>{{ cmt.user.username }}</p>
        <p>parent {{ cmt.parent_comment_id}}</p>
    {% endfor %}
</ul></div>


{% if form %}
    {{ wtf.quick_form(form) }}
    <br/>
{% endif %}

<h2><a href="{{ url_for('Add_BlogPost') }}">Add Post</a></h2>
<h2><a href="{{ url_for('Add_BlogType') }}">Aadd Type</a></h2>
<h2><a href="{{ url_for('Edit_Type') }}">Edit Type</a></h2>


{% endblock %}
