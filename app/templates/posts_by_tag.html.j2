{% extends 'base.html.j2' %}

{% block content %}
    <h1>Posts by Tag: {{ tag.name }}</h1>

    {% if posts %}
        <ul>
            {% for post in posts %}
                <li>
                    <h2>{{ post.title }}</h2>
                    <p>{{ post.body }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No posts found for this tag.</p>
    {% endif %}
{% endblock %}