<table class="table table-hover">
    <tr>
        <td style="width:10%">
            {% set user_link %}
            <a href="{{ url_for('user', username=post.author.username) }}">{{ post.author.username }}</a>
        {% endset %}
        {{ _('%(username)s posted <br/> %(when)s',
        username=user_link, when=moment(post.timestamp).fromNow()) }}
        </td>
        <br/>
        <td style="width:30%">
        {# Lau Mei Yan #}
        {{ post.title}}
        </td>
        <td style="width:60%">
        {{ post.body }}
        </td>
    </tr>
</table>
